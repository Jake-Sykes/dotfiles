(defcfg
  process-unmapped-keys yes
)

(defsrc
  caps
  
  1 2 3 4 5 6 7 8 9 0 - =
  q w e r t y u i o p [ ]
  a s d f g h j k l ; ' \
  < z x c v b n m , . /

  lmet lalt
)

(deflayer colmak-DH
  esc
  
  1 2 3 4 5 6 7 8 9 0 [ ]
  q @w @f @p b j @l @u @y ; - =
  a r s t g m n e i o ' \
  z x c d v @cw k h , . /

  lalt lmet
)

(deflayer qwerty
  esc
  
  1 2 3 4 5 6 7 8 9 0 [ ]
  q w e r t y u i o p - =
  a s d f g h j k l ; ' \
  z x c d v @cw k h , . /

  lalt lmet
)


(deflayer layouts
  caps

  @l_colmak @l_qwerty 3 4 5 6 7 8 9 0 [ ]
  q w e r t y u i o p - =
  a s d f g h j k l ; ' \
  z x c d v @cw k h , . /

  lalt lmet
)

(defvar
  tap-time 0
  hold-time 200
  hold-time-slow 300
)

(defalias
  l_qwerty (layer-switch qwerty)
  l_colmak (layer-switch colmak-DH)
  l_switch (layer-switch layouts)

  one_ctl (one-shot 2000 lctl)
  one_sft (one-shot 2000 lsft)
  one_alt (one-shot 2000 lalt)
  one_met (one-shot 2000 lmet)

  pound (unicode Â£)

  w (tap-hold $tap-time $hold-time w lalt)
  f (tap-hold $tap-time $hold-time f lsft)
  p (tap-hold $tap-time $hold-time p lctl)
  l (tap-hold $tap-time $hold-time l lctl)
  u (tap-hold $tap-time $hold-time u lsft)
  y (tap-hold $tap-time $hold-time y lalt)

  cw (caps-word 2000)
)
